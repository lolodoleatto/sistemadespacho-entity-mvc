@model IEnumerable<TP_MVC_CRUD.Models.Producto>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h2 class="display-2 text-center fw-bold">Productos</h2>
<p>
        <a asp-action="Create" class="btn btn-success fw-normal">Nuevo Producto</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoUnitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
                <th></th>
                <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostoUnitario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn btn-sm btn-primary">Editar</a> 
            </td>
            <td>
                        <a asp-action="Details" asp-route-id="@item.ProductoId" class="btn btn-sm btn-dark text-white">Detalles</a> 

            </td>
            <td>
                        <a asp-action="Delete" asp-route-id="@item.ProductoId" class="btn btn-sm btn-danger">Eliminar</a>
            </td>

        </tr>
}
    </tbody>
</table>
</body>
</html>
