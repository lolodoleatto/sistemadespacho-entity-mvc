@model TP_MVC_CRUD.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}


<h4>Nuevo Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
    <form asp-action="Create" method="post">
            <div class="form-group mb-3">
            <label asp-for="NombreUsuario"></label>
            <input asp-for="NombreUsuario" class="form-control" required />
            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
        </div>
            <div class="form-group mb-3">
            <label asp-for="Contraseña"></label>
            <input asp-for="Contraseña" type="password" class="form-control" required />
            <span asp-validation-for="Contraseña" class="text-danger"></span>
        </div>
        <div class="form-check mb-3">
            <input asp-for="EsAdministrador" class="form-check-input" type="checkbox" />
            <label asp-for="EsAdministrador" class="form-check-label">Administrador</label>
        </div>
        <a asp-action="Index" class="btn btn-dark">Volver</a>
        <button type="submit" class="btn btn-success">Crear</button>
    
    </form>
</div>
</div>