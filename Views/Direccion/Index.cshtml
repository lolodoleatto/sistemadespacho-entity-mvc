@model IEnumerable<TP_MVC_CRUD.Models.Direccion>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<h2 class="display-2 text-center fw-bold">Direcciones</h2>
<p>
        <a asp-action="Create" class="btn btn-success fw-normal">Nueva Dirección</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Calle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th>
                Id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Calle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.ClienteId)
            </td>
            <td>
                @($"{item.Cliente?.Nombre} {item.Cliente?.Apellido}")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DireccionId" class="btn btn-sm btn-primary">Editar</a> 
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.DireccionId" class="btn btn-sm btn-dark text-white">Detalles</a> 
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.DireccionId" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
