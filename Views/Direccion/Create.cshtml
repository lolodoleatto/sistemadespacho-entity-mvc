@model TP_MVC_CRUD.Models.Direccion

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Dirección</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Cliente" class="control-label"></label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                        <option value="">-- Seleccione un cliente --</option>
                    </select>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Calle" class="control-label"></label>
                    <input asp-for="Calle" class="form-control" />
                    <span asp-validation-for="Calle" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Localidad" class="control-label"></label>
                    <input asp-for="Localidad" class="form-control" />
                    <span asp-validation-for="Localidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a asp-action="Index" class="btn btn-dark">Volver</a>
                    <input type="submit" value="Crear" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>



</body>
</html>
